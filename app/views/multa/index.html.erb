<p id="notice"><%= notice %></p>

<h1>Multa</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Prestamo</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @multa.each do |multum| %>
      <tr>
        <td><%= multum.valor %></td>
        <td><%= multum.fecha %></td>
        <td><%= multum.estado %></td>
        <td><%= multum.estado %></td>
        <td><%= multum.Prestamo.fecha%></td>
        <td><%= link_to 'Show', multum,:class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_multum_path(multum), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', multum, method: :delete, data: {confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Multa', new_multum_path,:class => "btn btn-success" %>